{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Categories list</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>

                <td>{{ entity.nom }}</td>
                <td>
                <ul>
                    <a href="{{ path('adminCategories_show', { 'id': entity.id }) }}" class="icon-book"></a>
                    <a href="{{ path('adminCategories_edit', { 'id': entity.id }) }}" class="icon-edit"></a>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('adminCategories_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
